            "mutual_neighbors": false,

            "update_freq": 7,
            "epoch_size": 8e5,
            "max_sentences": 88,
            "max_tokens": 1e10,

            "num_workers": 4,

            "criterion": "cross_entropy_custom",
            "weight": 0.5
        },
        "mlm": {
            "task": "masked_lm_em",
            "non_mask_rate": 0.5,

            "mask_prob": 0.15,
            "leave_unmasked_prob": 0.1,
            "random_token_prob": 0.1,
            "freq_weighted_replacement": false,
            "mask_whole_words": true,

            "update_freq": 7,
            "epoch_size": 8e5,
            "n_valid_examples": 20000,

            "max_sentences": 88,
            "max_tokens": 1e10,

            "num_workers": 2,

            "criterion": "masked_lm_custom",
            "weight": 0.5
        }
    },

    "task": "multi_task",
    "arch": "multi_model",
    "entity_dim": 256,
    "encoder_output_layer_type": "entity_start_linear",


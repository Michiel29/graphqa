{
    "add_configs": ["../roberta/small.json", "../base.json", "../downstream/downstream_small.json"],
    // "add_configs": ["../roberta/small.json", "../base.json"],
    // "eval_downstream": false,

    "tasks": {
        "bor": {
            "task": "bor",
            "arch": "encoder_bor__roberta_small",
            "scoring_function": null,
            "mlp_layer_sizes": [[256, 2]],
            "mlp_layer_norm": true,
            "n_strong_candidates": 3,
            "n_weak_candidates": 100,
            "head_tail_weight": 0.5,
            "n_tries_entity": 100,
            "non_mask_rate": 0.2,
            "subsampling_strategy": "by_entity_pair",
            "subsampling_cap": 100,
            "n_valid_examples": 20000,
            "split_mode": false,

            "update_freq": 6,
            "epoch_size": 8e5,
            "max_sentences": 62,
            "max_tokens": 1e10,

            "num_workers": 8,

            "criterion": "bor",
            "weight": 0.5
        },
        "mlm": {
            "task": "masked_lm_em",
            "non_mask_rate": 0.5,

            "mask_prob": 0.15,
            "leave_unmasked_prob": 0.1,
            "random_token_prob": 0.1,
            "freq_weighted_replacement": false,
            "mask_whole_words": true,

            "update_freq": 6,
            "epoch_size": 8e5,
            "n_valid_examples": 20000,

            "max_sentences": 62,
            "max_tokens": 1e10,

            "num_workers": 2,

            "criterion": "masked_lm_custom",
            "weight": 0.5
        }
    },

    "task": "multi_task",
    "arch": "multi_model",
    "entity_dim": 256,
    "encoder_output_layer_type": "entity_start_linear",

    // "data_path": "../data/nki/bin-v5-threshold20-small",
    "data_path": "../data/nki/bin-v5-threshold20",
    // "data_path": "../data/nki/bin-v6",

    "mask_type": "start_end",

    "max_epoch": 200,
    "warmup_updates": 1000,
    "total_num_updates": 10000000,
    "lr": [1e-4],

    "checkpoint_dict": {
        "1191_last": {
            "checkpoints": [
                "../save/checkpoints/SAN-1191/checkpoint_last.pt" // ravenclaw --> tempest
            ]
        }
    },

    "num_workers": 4,
    "max_sentences": 62,
    "update_freq": null,
    "max_tokens": 1e10

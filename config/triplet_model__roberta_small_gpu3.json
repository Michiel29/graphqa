{
    "add_configs": ["roberta/small.json", "base.json"],

    "task": "triplet_inference",
    "arch": "encoder_triplet__roberta_small",
    "entity_dim": 256,
    "encoder_output_layer_type": "entity_start_linear",
    // "data_path": "../data/nki/bin-v5-threshold20-small",
    "data_path": "../data/nki/bin-v5-threshold20",

    "eval_downstream": true,
    "eval_kwargs": {
        "task": "fewrel",
        "arch": "encoder_fewrel__roberta_small",
        "data_path": "../data/fewrel/bin-v2",
        "n_way": 5,
        "n_shot": 1,
        "max_sentences": 10,
        "max_tokens": 2000,
        "criterion": "cross_entropy_custom"
    },

    "mask_type": "start_end",
    "non_mask_rate": 0.7,
    "subsampling_strategy": "by_entity_pair",
    "subsampling_cap": 100,
    "epoch_splits": 10,

    "max_epoch": 10,
    "warmup_updates": 1000, // = 10379 * 4 * 0.06
    "total_num_updates": 41516, // = 10379 * 4
    "lr": [5e-4],

    "num_workers": 2,
    "max_sentences": 1536,
    "update_freq": [6],
    "max_tokens": 14000,
    // batch size ~ 2278.7
    "required_batch_size_multiple": 1,

    "criterion": "cross_entropy_custom"
}

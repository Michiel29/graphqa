{
    "task": "masked_lm_em",
    "arch": "roberta_wrapper_base",
    "mask_type": "head_tail",
    "data_path": "../data/nki/bin-v3-threshold20",

    "mask_prob": 0.15,
    "leave_unmasked_prob": 0.1,
    "random_token_prob": 0.1,
    "freq_weighted_replacement": false,
    "mask_whole_words": true,

    "bpe": "gpt2",

    "encoder_layers": 12,
    "encoder_embed_dim": 768,
    "encoder_ffn_embed_dim": 3072,
    "encoder_attention_heads": 12,
    "encoder_output_layer_type": "lm_head",

    "max_epoch": 2,
    "warmup_updates": 500,
    "optimizer": "adam",
    "adam_betas": "(0.9, 0.98)",
    "adam_eps": 1e-6,
    "clip_norm": 0.0,
    "lr": [1e-5],
    "lr_scheduler": "polynomial_decay",

    "weight_decay": 0.1,
    "dropout": 0.1,
    "attention_dropout": 0.1,

    "max_sentences": 2048,
    "update_freq": [15],
    "max_positions": 128,
    "max_tokens": 7e3,
    "required-batch-size-multiple": 3,
    "skip_invalid_size_inputs_valid_test": true,

    "n_train_examples": -1,
    "n_valid_examples": -1,
    "n_test_examples": -1,

    "num_workers": 5,
    "save_dir": "../save/",
    "restore_file": false,
    "pretrain_encoder_path": "../data/roberta/roberta.base/model.pt",
    // "pretrain_encoder_path": "../data/roberta/roberta_small__checkpoint25.pt",
    "ddp_backend": "no_c10d",
    "no_epoch_checkpoints": false,

    "criterion": "masked_lm_custom"
}

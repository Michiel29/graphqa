{
    "task": "triplet_inference",
    "arch": "encoder_triplet__roberta_small",
    "data_path": "../data/nki/bin-v2-threshold20",

    "entity_dim": 256,

    "encoder_layers": 12,
    "encoder_embed_dim": 256,
    "encoder_ffn_embed_dim": 1024,
    "encoder_attention_heads": 4,
    "encoder_output_layer_type": "bag_of_words",

    "max_epoch": 4,
    "warmup_updates": 3600,
    "optimizer": "adam",
    "adam_betas": "(0.9, 0.98)",
    "adam_eps": 1e-6,
    "clip_norm": 0.0,
    "lr": [6e-4],
    "lr_scheduler": "polynomial_decay",

    "weight_decay": 0.1,
    "dropout": 0.1,
    "attention_dropout": 0.1,

    "max_sentences": 2048,
    "update_freq": [1],
    "max_positions": 128,
    "max_tokens": 2e4,
    "required-batch-size-multiple": 3,
    "skip_invalid_size_inputs_valid_test": true,

    "n_train_examples": -1,
    "n_valid_examples": -1,
    "n_test_examples": -1,

    "num_workers": 2,
    "save_dir": "../save/checkpoints__n_train=-1__max_epoch=4",
    "restore_file": false,
    //"pretrain_encoder_path": "../data/roberta/roberta.base/model.pt",
    "pretrain_encoder_path": "../data/roberta/roberta_small__checkpoint25.pt",
    "ddp_backend": "no_c10d",
    "no_epoch_checkpoints": true,

    "tensorboard_logdir": "../save/tensorboard__n_train=-1__max_epoch=4",

    "criterion": "cross_entropy_custom"
}

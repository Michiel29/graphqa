{
    "task": "fewrel",
    "data_path": "../data/fewrel/bin",
    "n_way": 5,
    "n_shot": 1,

    "n_train_examples": 25000,
    "n_valid_examples": 5000,
    "n_test_examples": -1,

    "arch": "encoder_fewrel__roberta_small",
    "mask_type": "head_tail",
    "encoder_layers": 12,
    "encoder_embed_dim": 256,
    "encoder_ffn_embed_dim": 1024,
    "encoder_attention_heads": 4,
    "encoder_output_layer_type": "cls_token_linear",

    "max_epoch": 20,
    "warmup_updates": 375,
    "optimizer": "adam",
    "adam_betas": "(0.9, 0.98)",
    "adam_eps": 1e-6,
    "clip_norm": 0.0,
    "lr": [1e-5],
    "lr_scheduler": "polynomial_decay",

    "max_sentences": 128,
    "max_tokens": 4000,
    "required-batch-size-multiple": 1,

    "num_workers": 2,
    "save_dir": "../save/checkpoints",
    //"load_checkpoint": "../save/triplet_inference/encoder_triplet__roberta_small/lr_0.001/02m_14d_14h_41m/checkpoints/checkpoint_best.pt",
    "pretrain_encoder_path": "../data/roberta/roberta_small__checkpoint25.pt",

    "restore_file": false,

    "ddp_backend": "no_c10d",
    "skip_invalid_size_inputs_valid_test": true,
    "max_positions": 128,

    "load_component_prefix": "encoder",

    "criterion": "cross_entropy_custom"
}

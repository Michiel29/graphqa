{
    "task": "mtb",
    "arch": "encoder_mtb__roberta_small",
    //"data_path": "../data/nki/bin-v2-threshold20",
    //"data_path": "../data/nki/bin_sample",
    "data_path": "../data/nki/bin-v3-threshold20-small",
    //"data_path": "../data/nki/bin-v3-threshold20",

    "case0_prob": 0.5,
    "case1_prob": 0.4,

    "entity_dim": 256,

    "encoder_layers": 12,
    "encoder_embed_dim": 256,
    "encoder_ffn_embed_dim": 1024,
    "encoder_attention_heads": 4,
    "encoder_output_layer_type": "entity_start",

    "max_epoch": 4,
    "warmup_updates": 1300,
    "optimizer": "adam",
    "adam_betas": "(0.9, 0.98)",
    "adam_eps": 1e-6,
    "clip_norm": 0.0,
    "lr": [3e-4],
    "lr_scheduler": "polynomial_decay",

    "weight_decay": 0.1,
    "dropout": 0.1,
    "attention_dropout": 0.1,

    "max_sentences": 256,
    "update_freq": [1],
    "max_positions": 128,
    "max_tokens": 1e4,
    "required_batch_size_multiple": 2,
    "skip_invalid_size_inputs_valid_test": true,

    "n_train_examples": 10000,
    "n_valid_examples": 10000,
    "n_test_examples": -1,

    "num_workers": 0,
    "save_dir": "../save/",
    "restore_file": false,
    //"pretrain_encoder_path": "../data/roberta/roberta.base/model.pt",
    "pretrain_encoder_path": "../data/roberta/roberta_small__checkpoint25.pt",
    "ddp_backend": "no_c10d",
    "no_epoch_checkpoints": false,

    "criterion": "binary_cross_entropy_custom"
}
